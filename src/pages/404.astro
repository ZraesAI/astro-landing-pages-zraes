---
import Layout from "../layouts/Layout.astro";
import { Home, ArrowLeft, AlertTriangle } from "lucide-astro";
---

<Layout title="404 - Page Not Found">
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-brand-background">
    <!-- Animated Background Grid -->
    <div class="absolute inset-0 opacity-20">
      <div class="grid-background"></div>
    </div>

    <!-- Floating Particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
    </div>

    <!-- Gradient Orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-primary/20 rounded-full blur-[120px] animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-brand-secondary/15 rounded-full blur-[120px] animate-pulse-slow delay-1000"></div>

    <!-- Main Content -->
    <div class="relative z-10 container mx-auto px-6 md:px-8 max-w-4xl text-center">
      <!-- 404 Number with Glitch Effect -->
      <div class="mb-8 relative">
        <h1 class="text-8xl md:text-9xl lg:text-[12rem] font-bold bg-gradient-to-r from-brand-primary via-brand-secondary to-brand-primary bg-clip-text text-transparent leading-none glitch-text" data-text="404">404</h1>
        <!-- Glitch layers -->
        <h1 class="text-8xl md:text-9xl lg:text-[12rem] font-bold text-brand-primary/20 leading-none absolute top-0 left-1/2 -translate-x-1/2 glitch-layer-1" aria-hidden="true">404</h1>
        <h1 class="text-8xl md:text-9xl lg:text-[12rem] font-bold text-brand-secondary/20 leading-none absolute top-0 left-1/2 -translate-x-1/2 glitch-layer-2" aria-hidden="true">404</h1>
      </div>

      <!-- Error Icon -->
      <div class="mb-8 flex justify-center">
        <div class="relative">
          <!-- Rotating Rings -->
          <div class="absolute inset-0 rounded-full border border-brand-primary/20 animate-spin-slow"></div>
          <div class="absolute inset-2 rounded-full border border-brand-secondary/20 animate-spin-slow-reverse"></div>

          <!-- Center Icon -->
          <div class="relative w-24 h-24 rounded-full bg-gradient-to-br from-brand-surface via-brand-surface to-brand-primary/20 border border-brand-primary/40 shadow-[0_0_60px_rgba(102,252,241,0.3)] flex items-center justify-center">
            <AlertTriangle class="w-12 h-12 text-brand-primary animate-pulse" />
          </div>
        </div>
      </div>

      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-brand-surface/50 backdrop-blur-sm rounded-full border border-brand-primary/30 mb-6">
        <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
        <span class="text-sm font-medium text-brand-primary uppercase tracking-wider">Transaction Failed</span>
      </div>

      <!-- Error Message -->
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">Page Not Found</h2>
        <p class="text-lg md:text-xl text-[#C5C6C7] max-w-2xl mx-auto leading-relaxed">The page you're looking for doesn't exist on the blockchain. It may have been moved to another address or the transaction was reverted.</p>
      </div>

      <!-- Error Details Box -->
      <div class="max-w-xl mx-auto mb-12 p-6 bg-brand-surface/40 backdrop-blur-xl rounded-xl border border-brand-primary/20">
        <div class="text-left space-y-2 font-mono text-sm">
          <div class="flex justify-between">
            <span class="text-[#C5C6C7]">Status:</span>
            <span class="text-red-400">NOT_FOUND</span>
          </div>
          <div class="flex justify-between">
            <span class="text-[#C5C6C7]">Block:</span>
            <span class="text-brand-primary">#404</span>
          </div>
          <div class="flex justify-between">
            <span class="text-[#C5C6C7]">Gas Used:</span>
            <span class="text-brand-secondary">0 Gwei</span>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        <a href="/" class="group inline-flex items-center gap-2 px-8 py-4 bg-brand-primary text-brand-background font-bold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-[0_0_40px_rgba(102,252,241,0.4)]">
          <Home class="w-5 h-5" />
          Return Home
        </a>
        <button
          onclick="history.back()"
          class="group px-8 py-4 border-2 border-brand-primary/50 text-brand-primary font-bold rounded-lg transition-all duration-300 hover:border-brand-primary hover:bg-brand-primary/10 hover:shadow-[0_0_30px_rgba(102,252,241,0.2)]"
        >
          <span class="flex items-center gap-2">
            <ArrowLeft class="w-5 h-5" />
            Go Back
          </span>
        </button>
      </div>

      <!-- Quick Links -->
      <div class="pt-8 border-t border-brand-primary/20">
        <p class="text-sm text-[#C5C6C7] mb-4">Quick Navigation:</p>
        <div class="flex flex-wrap items-center justify-center gap-4">
          <a href="/" class="px-4 py-2 bg-brand-surface/40 border border-brand-primary/20 text-[#C5C6C7] rounded-lg hover:bg-brand-primary/10 hover:text-brand-primary hover:border-brand-primary/40 transition-all duration-200">Home</a>
          <a href="/profil" class="px-4 py-2 bg-brand-surface/40 border border-brand-primary/20 text-[#C5C6C7] rounded-lg hover:bg-brand-primary/10 hover:text-brand-primary hover:border-brand-primary/40 transition-all duration-200"
            >Features</a
          >
          <a href="/program" class="px-4 py-2 bg-brand-surface/40 border border-brand-primary/20 text-[#C5C6C7] rounded-lg hover:bg-brand-primary/10 hover:text-brand-primary hover:border-brand-primary/40 transition-all duration-200"
            >Solutions</a
          >
          <a href="/berita" class="px-4 py-2 bg-brand-surface/40 border border-brand-primary/20 text-[#C5C6C7] rounded-lg hover:bg-brand-primary/10 hover:text-brand-primary hover:border-brand-primary/40 transition-all duration-200">Docs</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Grid Background */
  .grid-background {
    width: 100%;
    height: 100%;
    background-image: linear-gradient(rgba(102, 252, 241, 0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(102, 252, 241, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
  }

  /* Particles */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #66fcf1;
    border-radius: 50%;
    box-shadow: 0 0 10px #66fcf1;
  }

  .particle-1 {
    top: 20%;
    left: 10%;
    animation: float-particle 8s ease-in-out infinite;
  }
  .particle-2 {
    top: 60%;
    left: 85%;
    animation: float-particle 10s ease-in-out infinite 1s;
  }
  .particle-3 {
    top: 80%;
    left: 20%;
    animation: float-particle 7s ease-in-out infinite 2s;
  }
  .particle-4 {
    top: 30%;
    left: 70%;
    animation: float-particle 9s ease-in-out infinite 0.5s;
  }

  @keyframes float-particle {
    0%,
    100% {
      transform: translateY(0) translateX(0);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-30px) translateX(20px);
      opacity: 1;
    }
  }

  /* Glitch Effect */
  @keyframes glitch {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
    100% {
      transform: translate(0);
    }
  }

  .glitch-layer-1 {
    animation: glitch 0.3s infinite;
    clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
  }

  .glitch-layer-2 {
    animation: glitch 0.5s infinite reverse;
    clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
  }

  /* Animations */
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes spin-slow-reverse {
    from {
      transform: rotate(360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  .animate-spin-slow-reverse {
    animation: spin-slow-reverse 25s linear infinite;
  }

  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  /* Delay utilities */
  .delay-1000 {
    animation-delay: 1000ms;
  }
</style>
